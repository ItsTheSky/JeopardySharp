<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="JeopardyApp.App"
             xmlns:local="using:JeopardyApp"
             xmlns:styling="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
             xmlns:converters="clr-namespace:JeopardyApp.Models.Converters"
             xmlns:utilities="clr-namespace:JeopardyApp.Utilities"
             RequestedThemeVariant="Default">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
    
    <Application.Resources>
        <converters:MultiArrayConverter x:Key="MultiArrayConverter"/>
        <converters:IntTernaryConverter x:Key="IntTernaryConverter"/>
        
        <utilities:BoolToPlayPauseSymbolConverter x:Key="BoolToPlayPauseSymbolConverter" />
        <utilities:BoolToPlayPauseTextConverter x:Key="BoolToPlayPauseTextConverter" />
        <utilities:VolumeToSymbolConverter x:Key="VolumeToSymbolConverter" />
    </Application.Resources>
  
    <Application.Styles>
        <styling:FluentAvaloniaTheme />
    </Application.Styles>
</Application>